<?xml version="1.0" encoding="utf-8"?>
<org.geometerplus.android.fbreader.NavigationWindow
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/navigation_panel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:background="#DF111111"
    android:focusable="false"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:visibility="visible">

    <TextView
        android:id="@+id/navigation_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_gravity="center_horizontal"
        android:drawablePadding="6dp"
        android:paddingRight="10dp"
        android:ellipsize="end"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:lines="1"
        android:text="32% 不知名的书籍"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ddd"
        android:textSize="16dp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="2dp">

        <TextView
            android:id="@+id/pre_character"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="上一章"
            android:textColor="@android:color/darker_gray"
            android:textSize="13sp" />

        <SeekBar
            android:id="@+id/navigation_slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="65dp"
            android:layout_marginRight="65dp" />

        <TextView
            android:id="@+id/next_character"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:text="下一章"
            android:textColor="@android:color/darker_gray"
            android:textSize="13sp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0.01dp"
        android:background="#A1aaaaaa">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/navigation_toc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:drawablePadding="6dp"
            android:drawableTop="@drawable/toc"
            android:paddingBottom="15dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="15dp"
            android:text="目录"
            android:textColor="#dfaaaaaa"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/navigation_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:drawablePadding="6dp"
            android:drawableTop="@drawable/dark"
            android:paddingBottom="15dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="15dp"
            android:text="夜间"
            android:textColor="#dfaaaaaa"
            android:textSize="12sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/navigation_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:drawablePadding="6dp"
            android:drawableTop="@drawable/lights"
            android:paddingBottom="15dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="15dp"
            android:text="日间"
            android:textColor="#dfaaaaaa"
            android:textSize="12sp"
            android:visibility="invisible" />



        <TextView
            android:id="@+id/navigation_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawablePadding="6dp"
            android:drawableTop="@drawable/fonts"
            android:paddingBottom="15dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="15dp"
            android:text="搜索"
            android:textColor="#dfaaaaaa"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/navigation_fonts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="6dp"
            android:drawableTop="@drawable/fonts"
            android:layout_toLeftOf="@id/navigation_search"
            android:paddingBottom="15dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="15dp"
            android:text="设置"
            android:textColor="#dfaaaaaa"
            android:textSize="12sp" />

    </RelativeLayout>
</org.geometerplus.android.fbreader.NavigationWindow>
